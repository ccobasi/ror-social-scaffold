<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <span style="display: inline;"> <%= friendship_button(@user) if @user != current_user %> </span>
 
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>